{
  "name": "@web3-storage/w3up-client",
  "version": "3.0.0",
  "description": "Client for the w3up API",
  "license": "Apache-2.0 OR MIT",
  "type": "module",
  "main": "src/index.js",
  "types": "dist/src/index.d.ts",
  "browser": {
    "./src/store.js": "./src/store.browser.js",
    "./src/signer.js": "./src/signer.browser.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "npm run build:api_docs && npm run build:types",
    "build:api_docs": "jsdoc2md -c .jsdoc.json -f src/index.js > API.md",
    "build:types": "tsc --declaration --emitDeclarationOnly --declarationDir ./dist",
    "pretest": "npm run typecheck && npm run lint",
    "test": "vitest run",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "typecheck": "tsc --noEmit",
    "test:coverage": "vitest run --coverage",
    "test:dev": "vitest -w"
  },
  "dependencies": {
    "@ipld/car": "^4.1.5",
    "@ipld/dag-ucan": "^2.0.1",
    "@ucanto/client": "^3.0.2",
    "@ucanto/core": "^3.0.5",
    "@ucanto/interface": "^3.0.1",
    "@ucanto/principal": "^3.0.1",
    "@ucanto/transport": "^3.0.2",
    "@web3-storage/access": "^8.0.0",
    "@web3-storage/capabilities": "^1.0.0",
    "@web3-storage/upload-client": "^2.1.0",
    "multiformats": "^10.0.2"
  },
  "devDependencies": {
    "@vitest/coverage-c8": "^0.23.4",
    "ipjs": "^5.2.0",
    "jsdoc-to-markdown": "^7.1.1",
    "jsdoc-tsimport-plugin": "^1.0.5",
    "lint-staged": "^13.0.3",
    "semantic-release": "^19.0.5",
    "simple-git-hooks": "^2.8.0",
    "standard": "^17.0.0",
    "typescript": "^4.8.3",
    "vitest": "^0.23.4"
  },
  "resolutions": {
    "@ucanto/validator": "^1.0.2"
  },
  "lint-staged": {
    "*.*": "npm run lint:fix"
  }
}
